{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "esModuleInterop": true,
        "lib": [
            "es2021",
            "dom"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "strict": true,
        "target": "es5"
    },
    "exclude": [
        "node_modules",
        "dist",
        "demo",
        "__tests__"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}